{
	"compilerOptions": {
		"target": "es2015",
    "module": "es2015",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "outDir": "./src",
    "rootDir": "./ts-commands",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
	},
	"include": [
    "./ts-commands/**/*",
  ],
  "exclude": [
    "./assets",
    "./measure.sketchplugin",
    "./node_modules",
    "./sketch_assets",
    "./.babelrc",
    "./.gitignore",
    "./package-lock.json",
    "./package.json",
    "./tsconfig.json",
    "./tslint.json",
    "./webpack.skpm.config.js"
  ]
}