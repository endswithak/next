{
	"compilerOptions": {
		"target": "es2015",
    "module": "es2015",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "outDir": "./",
    "rootDir": "./ts",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
	},
	"include": [
    "./ts/**/*",
  ],
  "exclude": [
    "./ts/types/**/*",
    "./assets",
    "./next.sketchplugin",
    "./node_modules",
    "./sketch_assets",
    "./.babelrc",
    "./.gitignore",
    "./package-lock.json",
    "./package.json",
    "./tsconfig.json",
    "./tslint.json",
    "./webpack.skpm.config.js"
  ]
}